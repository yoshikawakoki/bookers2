<% if users.exists? %>
  <table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% users.each do |user| %>
      <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.png", size: "40x40" %></th>
        <th><%= user.name %></th>
        <th>フォロー数：<%= user.followings.count %></th>
        <th>フォロワー数：<%= user.followers.count %></th>
        <th><%= link_to "Show", user_path(user.id) %></th>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>