<main>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
   <% end %>
   
      <%= render "books/list", book: @book, user: @user %>


        <h2>Books</h2>
        <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>

          <% @books.each do |book| %>
          <div>
            <tr>
              <th><%= attachment_image_tag book.user, :image, fallback: "no_image.png", size: "40x40" %></th>
              <th><%= link_to book.title, book_path(book.id) %></th>
              <th><%= book.body %></th>
            </tr>
          </div>
          <% end %>
        </table>
      </div>
    </div>
    </div>

</main>