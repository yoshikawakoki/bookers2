<main>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :image, fallback: "no_image.png", size: "60x60" %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.profile %></th>
          </tr>
        </table>
        <div class="row">

        </div>

        <h2>New Book</h2>
        <%= form_with model:@book, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <div>
        <%=f.submit "Createbook", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>

          <% @books.each do |book| %>
          <div>
            <tr>
              <th><%= attachment_image_tag @user, :image, fallback: "no_image.png", size: "60x60" %></th>
              <th><%= book.title %></th>
              <th><%= book.body %></th>
            </tr>
          </div>
          <% end %>
        </table>
      </div>
    </div>
    </div>

</main>