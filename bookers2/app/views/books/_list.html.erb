<div class="container px-5 px-sm-0">
    <div class="row">

     <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :image, fallback: "no_image.png", size: "60x60" %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.profile %></th>
          </tr>
        </table>
        <div class="row">
          <% if user == current_user %>
          <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
          <% else %>
          <%= link_to "", user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
          <% end %>
        </div>

        <h2>New Book</h2>
        <%= form_with model:book, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <div>
        <%=f.submit "Createbook", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
